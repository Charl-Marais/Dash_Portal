<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Device Management
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li> 
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">User Details</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table" border="1">
            <tr><td>Username</td>       <td><%= user.username %></td>     </tr>
            <tr><td>First Name</td>     <td><%= user.firstName %></td>    </tr>
            <tr><td>Last Name</td>      <td><%= user.lastName %></td>     </tr>
            <tr><td>Title</td>          <td><%= user.title %></td>        </tr>
            <tr><td>Email</td>          <td><%= user.email %></td>        </tr>
            <tr><td>Mobile Number</td>  <td><%= user.mobileNumber %></td> </tr>
            <tr><td>Office Number</td>  <td><%= user.officeNumber %></td> </tr>
            <tr><td>Presence</td>       <td><%= user.presence %></td>     </tr>
            <tr><td>Country</td>        <td><%= user.country %></td>      </tr>
            <tr><td>Region</td>         <td><%= user.regions %></td>      </tr>
            <tr><td>City</td>           <td><%= user.city %></td>         </tr>
            <tr><td>Building</td>       <td><%= user.building %></td>     </tr>
            <tr><td>Floor</td>          <td><%= user.floor %></td>        </tr>
          </table>

          <h4 class="box-title">Logged on Devices</h4>

          <table class="table table-striped" border="1">
            <tbody>
            <tr>
              <th>Serial</th>
              <th>Make</th>
              <th>Model</th>
            </tr>
            <% user.Devices.forEach( (d) => { %>
              <tr>
                <td><%= d.serial %></td>
                <td><%= d.make %></td>
                <td><%= d.model %></td>
              </tr>
            <% }) %>
            </tbody>
          </table>

        </div>
      <!-- /.box-body -->
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->


